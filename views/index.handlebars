<header>
  <h1>Log-a-Burger</h1>
  <img src="/assets/img/burger.png" alt="Burger" />
</header>

<div class="container">
  <div class="left">
    <h2>Burgers to Eat</h2>
    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burger-block devoured=false }}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="right">
    <h2>Devoured Burgers</h2>
    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burger-block devoured=true }}
      {{/if}}
      {{/each}}
    </ul>
  </div>

  <div class="add-burger">
    <h2>Add a Burger</h2>
    <form class="devour-form">
      <div class="form-group">
        <label for="burger">Burger Type:</label>
        <input type="text" id="burger" name="name">
      </div>
      <div class="form-group">
        <label for="burger">Burger Type:</label>
        <input type="radio" , name="devoured" value="0">Available
        <input type="radio" name="devoured" value="1" checked>Devoured!
      </div>
      <button type="submit">Add</button>
    </form>
  </div>
</div>